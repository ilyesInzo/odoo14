<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="update_period_wizard_form" model="ir.ui.view">
            <field name="name">update period form</field>
            <field name="model">update.period.wizard</field>
            <field name="arch" type="xml">
                <form string="Update employees">
                    <sheet>
                        <group>
                            <group>
                                <field name="start_time" required="1"/>
                                <field name="end_time"/>
                                <field name="calendar_id" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="update_dates" type="object" string="Update" class="btn-primary" />
                        <button name="cancel" special="cancel" type="object" string="Cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
